{
	"compilerOptions": {
		"strict": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "es2020",
		"lib": ["es2020", "es2022.error"],
		"removeComments": true,
		"useUnknownInCatchVariables": false,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"incremental": true,
		"declaration": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"outDir": "./dist/",
		"baseUrl": ".",
		"paths": {
			"n8n-workflow": ["./node_modules/n8n-workflow"],
			"solana-agent-kit": ["../../packages/core/dist"]
		}
	},
	"include": [
		"credentials/**/*",
		"nodes/**/*",
		"nodes/**/*.json",
		"package.json"
	]
}
